
<%- include('../partials/header.ejs')  %>
<link rel='stylesheet' href='/Content/tracker_global.css' />
<link rel='stylesheet' href='/Content/tracker_main_page.css' />
</head>
<body>
<%- include('../partials/main_nav.ejs') %>

<main >
<div class=main_contain>
    <img src="Assets/images/muscleweight.jpg" alt="muscleweight">
<div class="container">
    
    <div class="row">
        <!--this creates the original table database that will store and update all the information-->
         <div class="col-md-11">
            <div class="position">
            <h1><%=title %></h1>
            <a href="tracker-list/add" class="btn btn-secondary" role="button" >
                <!--This allows member to add new gym user-->
                <i class="fa-solid fa-user-plus"></i> New Gym Member
            </a>
            </div>
            <br>
            <br>
    <table class="table table-bordered table-hover">
    <tr class="d-flex">
<!--this is the first row of the table that shows what kind of info is displayed-->
         <th class="text-center col-2">Name</th>
         <th class="text-center col-2">Gender</th>
         <th class="text-center col-1">Age</th>
         <th class="text-center col-1">Height</th>
         <th class="text-center col-1">Weight</th>
         <th class="text-center col-1">Weight Goal</th>
         <th class="text-center col-2"></th>
         <th class="text-center col-2"></th>
    </tr>
    <% for ( let count=0; count<Trackerlist.length; count++){ %>
        <tr class="d-flex ">
           <!--this gets the input and displays it the count++ allows it to keep adding-->
            <td class="text-center col-2"><%= Trackerlist[count].name %></td>
            <td class="text-center col-2"><%= Trackerlist[count].gender %></td>
            <td class="text-center col-1"><%= Trackerlist[count].age %></td>
            <td class="text-center col-1"><%= Trackerlist[count].height %></td>
            <td class="text-center col-1"><%= Trackerlist[count].weight %></td>
            <td class="text-center col-1"><%= Trackerlist[count].weight_goal %></td>
            <td class="text-center col-2">
                <a href="/tracker-list/edit/<%=Trackerlist[count]._id %>"
                    class="btn btn-light">
                    <i class="fa-solid fa-file-pen"></i>Edit</a>
            </td>
            <td class="text-center col-2">
                <a href="/tracker-list/delete/<%= Trackerlist[count]._id %>"
                    class="btn btn-danger">
                    <i class="fa-solid fa-trash"></i></i>Delete</a>
            </td>
        
        </tr>
    <% } %>
    </table>
   
</div>
</div>
   
 </div>
</div>
</main>

 
<%- include('../partials/bottom_nav.ejs') %>
<%- include('../partials/footer.ejs') %>